{
  "name": "krug",
  "version": "0.1.0",
  "description": "The Krug programming language!",
  "main": "build/krug.js",
  "files": [
    "build/"
  ],
  "scripts": {
    "build": "tsc",
    "test": "jest --ci --verbose",
    "test:coverage": "jest --ci --coverage",
    "coverage": "jest --coverage --ci && cat ./coverage/lcov.info | coveralls"
  },
  "keywords": [
    "krug",
    "programming"
  ],
  "author": "David Katz",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhkatz/krug.git"
  },
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.20.0",
    "@typescript-eslint/parser": "^4.20.0",
    "coveralls": "^3.1.0",
    "eslint": "^7.23.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "commander": "^7.2.0",
    "ohm-js": "^15.4.1",
    "tslib": "^2.1.0"
  },
  "eslintConfig": {
    "extends": [
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {}
  },
  "jest": {
    "preset": "ts-jest",
    "globals": {
      "ts-jest": {
        "tsconfig": "./tsconfig.json"
      }
    },
    "testEnvironment": "node",
    "collectCoverage": true,
    "testRegex": "(/test/.*|(\\.|/)(test|spec))\\.(ts|js)?$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverageFrom": [
      "src/*.{ts}"
    ]
  }
}
